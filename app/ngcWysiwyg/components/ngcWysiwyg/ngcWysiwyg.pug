div.container(md-whiteframe='1')
  div.menu-container(md-whiteframe='1')
    div.menu-bar(layout='row')
      ngc-wysiwyg-text-menu
      md-divider
      ngc-wysiwyg-align-menu
      md-divider
      ngc-wysiwyg-input-menu
  div.content-editable-container
    ngc-wysiwyg-editable-container
    //- left  == img.offsetLeft + (img.offsetWidth / 2) - (menu.offsetWidth/2)
    //- top  == img.offsetTop + (img.offsetHeight) + 8
    ngc-wysiwyg-floating-menu(ng-class='{"hidden" : !vm.itemSelecionado}')
    ngc-wysiwyg-image-resizer(ng-class='{"hidden" : !vm.imagemSelecionada}' ng-style='{top: vm.itemSelecionado.offsetTop, left: vm.itemSelecionado.offsetLeft, height: vm.itemSelecionado.offsetHeight, width: vm.itemSelecionado.offsetWidth}')
  md-button(ng-click='vm.teste()') teste
  pre {{{top: vm.itemSelecionado.offsetTop, left: vm.itemSelecionado.offsetLeft, height: vm.itemSelecionado.offsetHeight, width: vm.itemSelecionado.offsetWidth} |json}}