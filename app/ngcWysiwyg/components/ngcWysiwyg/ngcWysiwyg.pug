div.container(md-whiteframe='1')
  div.menu-container(md-whiteframe='1' md-colors="{'border-color': 'primary'}")
    div.menu-bar(layout='row')
      ngc-wysiwyg-text-menu
      md-divider
      ngc-wysiwyg-align-menu
      md-divider
      ngc-wysiwyg-input-menu
      md-divider
      ngc-wysiwyg-undo-menu


  div.content-editable-container
    ngc-wysiwyg-editable-container
    //- left  == img.offsetLeft + (img.offsetWidth / 2) - (menu.offsetWidth/2)
    //- top  == img.offsetTop + (img.offsetHeight) + 8
    ngc-wysiwyg-floating-menu(md-colors="{'border-color': 'primary'}" ng-class='{"hidden" : !vm.itemSelecionado[0]}' ng-style='{top: vm.itemSelecionado[0].offsetTop + (vm.itemSelecionado[0].offsetHeight) + 8 , left: vm.itemSelecionado[0].offsetLeft + (vm.itemSelecionado[0].offsetWidth / 2) - (vm.floatingMenuCtrl.botoes.length * 30 / 2)}')
    ngc-wysiwyg-image-resizer(md-colors="{'border-color': 'primary'}" ng-class='{"hidden" : !vm.imagemSelecionada}' ng-style='{top: vm.itemSelecionado[0].offsetTop, left: vm.itemSelecionado[0].offsetLeft, height: vm.itemSelecionado[0].offsetHeight, width: vm.itemSelecionado[0].offsetWidth}')
  md-button(ng-click='vm.teste()') teste
  pre {{{top: vm.itemSelecionado[0].offsetTop, left: vm.itemSelecionado[0].offsetLeft, height: vm.itemSelecionado[0].offsetHeight, width: vm.itemSelecionado[0].offsetWidth} |json}}
  button(ng-mousedown='vm.teste($event)') teste